# # ========== server/Dockerfile ==========
# FROM node:18-alpine

# WORKDIR /app

# # Copy package.json and package-lock.json
# COPY package*.json ./

# # Install dependencies
# RUN npm install --production

# # Copy all backend source files
# COPY . .

# # Expose backend port
# EXPOSE 5000

# # Start the backend server
# CMD ["npm", "start"]


# server/Dockerfile
FROM node:20-alpine
WORKDIR /app
COPY package*.json ./
RUN npm ci --silent
COPY . .
ENV PORT=5000
EXPOSE 5000
CMD ["npm", "start"]
